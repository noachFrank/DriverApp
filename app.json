{
  "expo": {
    "name": "Shia's Transportation",
    "slug": "driver-app",
    "owner": "shias-transportation",
    "version": "1.0.0",
    "extra": {
      "eas": {
        "projectId": "e10cef00-7d76-4b2e-8b18-7a7414e504b1"
      }
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shiasTransportation.driverapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show distance to pickup locations.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.shiasTransportation.driverapp",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow DriverApp to use your location to show distance to pickup locations."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1976d2",
          "sounds": []
        }
      ],
      "./plugins/withSquareInAppPayments"
    ]
  }
}
